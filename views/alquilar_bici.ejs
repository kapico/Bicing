<!-- SINTAXIS HTML  -->
<!-- <nombre_etiqueta atributo="valor">CONTENIDO</nombre_etiqueta> -->
<!-- etiqueta que dice al navegador que es un doc. HTML -->
<!DOCTYPE html>
<!-- etiqueta contenedora de todos los elementos HTML -->
<html lang="es">
<!-- head: contiene los elementos de config. de la pag. web -->

<head>
    <!-- codifica los caracteres especiales -->
    <meta charset="UTF-8">
    <!-- compatibilidad con IE EDGE -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- para que sea correcta la visualizacion en Responsive -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- titulo de la pag web  -->
    <title>Alquilar</title>
    <!-- link a css  -->
    <link rel="stylesheet" href="css/bicing_main.css">
    <link rel="stylesheet" href="css/alquilar_bici.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==" crossorigin="" />
    <script src="js/alquilar_bici.js"></script>
</head>

<body>
    <!-- CABECERA -->
    <!-- dentro de la etiqueta body, aÃ±adimos los elementos visuales de nuestra pag web -->
    <%- include('partials/header') %>
        <!-- contenido principal -->
        <main>
            <h1>Seleccionar bicicleta</h1>
            <form name="bicis" id="bicis" action="#">
                <select name="bici" id="bici">
                    <% for(let i=0; i!=bicis.length; i++){ %>
                        <% if (detector) { %>
                            <option id="id_bici" value= "<%= bicis[i].ID_Bici %>"> <%= bicis[i].ID_Bici %> </option>
                        <% } else { %>
                            <option value= "<%= bicis[i].BICICLETA_ID_Bici %>"> <%= bicis[i].BICICLETA_ID_Bici %> </option>
                        <% } %>
                    <% } %>
                </select>
                <% if (detector) { %>
                    <input type="button" value="Alquilar" id="regBTN">
                <% } else { %>
                    <input type="button" value="Devolver" id="regBTN">
                <% } %>
            </form>
            <div id="insertarCAJA" style="color: red; font-weight: bold;"></div>
        </main>
        <div id="map"></div>

        <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js" integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew==" crossorigin=""></script>
        <script src="js/mapa.js"></script>
    <%- include('partials/footer') %>
</body>

</html>