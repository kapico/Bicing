<!-- SINTAXIS HTML  -->
<!-- <nombre_etiqueta atributo="valor">CONTENIDO</nombre_etiqueta> -->
<!-- etiqueta que dice al navegador que es un doc. HTML -->
<!DOCTYPE html>
<!-- etiqueta contenedora de todos los elementos HTML -->
<html lang="es">
<!-- head: contiene los elementos de config. de la pag. web -->

<head>
    <!-- codifica los caracteres especiales -->
    <meta charset="UTF-8">
    <!-- compatibilidad con IE EDGE -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- para que sea correcta la visualizacion en Responsive -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- titulo de la pag web  -->
    <title>Inicio</title>
    <!-- link a css  -->
    <link rel="stylesheet" href="css/Bicing_main.css">
</head>

<body>
    <!-- CABECERA -->
    <!-- dentro de la etiqueta body, añadimos los elementos visuales de nuestra pag web -->
    <%- include('partials/header') %>
    <main>

        <div class="banner">
            <div id="b1">¡Muévete de forma sostenible por Barcelona!</div>
            <div id="b2">Utiliza Bicing por menos de 5 € al mes</div>
            <% if (session) { %>
                <div>
                    <a id="boton_a" href="/perfil_usuario"><input id="alta" type="button" value="PERFIL"></a>
                </div>
            <% } else { %>
                <div>
                    <a id="boton_a" href="/bicing_register"><input id="alta" type="button" value="DATE DE ALTA"></a>
                </div>
            <% } %>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>

</html>